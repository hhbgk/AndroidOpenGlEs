<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First OpenGL ES 2.0"
        android:onClick="onClickFirstOpenGLES"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AirHockey1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AirHockey1"
        android:onClick="onClickAirHockey"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/AirHockey2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AirHockey2"
        android:onClick="onClickAirHockey2"
        app:layout_constraintTop_toBottomOf="@id/AirHockey1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AirHockey3Ortho"
        android:onClick="onClickAirHockey3Ortho"
        app:layout_constraintTop_toBottomOf="@id/AirHockey2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>